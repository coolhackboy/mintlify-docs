{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "PoYo AI",
  "colors": {
    "primary": "#3B82F6",
    "light": "#60A5FA",
    "dark": "#1E40AF"
  },
  "favicon": "/favicon.ico",
  "api": {
    "baseUrl": "https://api.poyo.ai",
    "auth": {
      "method": "bearer"
    },
    "playground": {
      "mode": "simple"
    }
  },
  "openapi": [
    "/openapi.json",
    "/api-manual/image-series/gpt-4o-image.json",
    "/api-manual/image-series/nano-banana.json",
    "/api-manual/video-series/sora2.json",
    "/api-manual/video-series/veo3.json"
  ],
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "guides/getting-started/quickstart"
            ]
          }
        ]
      },
      {
        "tab": "API Manual",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-manual/overview"
            ]
          },
          {
            "group": "Image Series",
            "pages": [
              "api-manual/image-series/gpt-4o-image",
              "api-manual/image-series/nano-banana"
            ]
          },
          {
            "group": "Video Series",
            "pages": [
              "api-manual/video-series/sora-2",
              "api-manual/video-series/veo3"
            ]
          },
          {
            "group": "Task Management",
            "pages": [
              "api-manual/task-management/status",
              "api-manual/task-management/webhooks"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Support",
          "href": "mailto:support@poyo.ai",
          "icon": "envelope"
        }
      ]
    }
  },
  
  "navbar": {
    "links": [
      {
        "label": "Console",
        "href": "https://poyo.ai"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get API Key",
      "href": "https://poyo.ai/dashboard/api-key"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  }
}
